<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    >

    <TextView
        android:id="@+id/post_uploader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F2FA"
        android:fontFamily="@font/abel"
        android:textColor="#191718"
        android:textSize="20sp" />
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_pic"
    />
    <TextView
        android:id="@+id/post_caption"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F9F2FA"
        android:fontFamily="@font/alegreya_sans_sc_bold_italic"
        android:textColor="#FF1162"
        android:textSize="27sp" />
  <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/like_count"
        />
        -->

    <Button
        android:id="@+id/like_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5169ED"
        android:fontFamily="casual"
        android:text="Like"
        android:textColor="#EFE9E9"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>