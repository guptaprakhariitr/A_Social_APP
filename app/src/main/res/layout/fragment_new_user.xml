<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constrainedHeight="true"
    android:background="@drawable/back_main"
    app:layout_constraintHeight_default="percent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indeterminateBar"
            />
        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_instanu"
            android:layout_margin="15dp"
            android:hint="First Name" />
        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstname"
            android:layout_margin="15dp"
            android:hint="Last Name" />
        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastName"
            android:layout_margin="15dp"
            android:hint="Country" />

        <EditText
            android:id="@+id/email_idnu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country"
            android:layout_margin="15dp"
            android:hint="Email-id"
            />

        <EditText
            android:id="@+id/passwordnu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_idnu"
            android:layout_margin="15dp"
            android:hint="create Password"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordnu"
            android:layout_centerHorizontal="true"
            android:id="@+id/signUpnu"
            android:backgroundTint="#EA007F"
            android:text="Sign Up"
            android:onClick="createAccount"
            />

        <ImageView
            android:id="@+id/name_instanu"
            android:layout_width="235dp"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/name_insta" />

        <ImageView
            android:id="@+id/logonu"
            android:layout_width="78dp"
            android:layout_height="120dp"
            android:layout_below="@+id/signUpnu"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />
    </RelativeLayout>
</ScrollView>